<div class="container">
    <div class="text-center">
        <h1>Eat-Da-Burger!</h1>
    </div>
    <hr>
    <div class="row text-center">
        <div class="col-4 burger-table">
            <h2>Burger To Eat!</h2>
            <ul class="list-group">
                {{#each burgers}}
                  {{#unless devoured}}
                    {{> burgers/burger-block devoured=true}}
                  {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-4 burger-table">
          <img src="/public/assets/img/Floating-burger-transparent-background-PNG.png" height="400">
        </div>

        <div class="col-4 burger-table">
            <h2>Devoured Burgers</h2>
            <ul class="list-group">
                {{#each burgers}}
                {{#if devoured}}
                  {{> burgers/burger-block devoured=false}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

    <div class="row text-center add-burger">
        <div class="col">
            <h3>Add a Burger</h3>
            <form class="create-form">
              
                <div class="form-group">
                    <label for="burgerName">Burger Name: </label>
                    <input type="text" id="burgerName" name="burger_name">
                </div>

                <div class="form-group">
                  <label for="devoured">Have you devoured it yet?</label><br>
                  <input type="radio" name="devoured" value="1" checked> Devoured!<br>
                  <input type="radio" name="devoured" value="0"> Still Need To Eat!
                </div>

                <button type="submit" class="btn btn-info">Add to burger logger</button>

            </form>
        </div>
    </div>
</div>
